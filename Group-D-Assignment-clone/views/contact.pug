extends template/main.pug

block headStuff
    title Kontakta oss

block scripts
    script(type='module', src='/static/js/contact.js' defer)

block content
    div(class='contact-page')
        h1(class='contact-page__title')
        form(class='contact-form', method='POST', action='/submit', id='contactForm', novalidate)
            label(class='contact-form__label--name')
            input(type='text', name='name', id='name', required)
            span(class='error-message', id='nameError')

            label(class='contact-form__label--email')
            input(type='email', name='email', id='email', required)
            span(class='error-message', id='emailError')

            label(class='contact-form__label--phoneNumber')
            input(type='tel', name='phoneNumber', id='phoneNumber')
            span(class='error-message', id='phoneNumberError')

            label(class='contact-form__label--topic')
            input(type='topic', name='topic', id='topic', required)
            span(class='error-message', id='topicError')

            label(class='contact-form__label--message')
            textarea(name='message', id='message', required)
            span(class='error-message', id='messageError')

            button(class='contact-form__button', type='submit', id='submitButton', disabled)